{% extends 'base.html.twig' %}

{% block title %}Dashboard - TickBase{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col bg-secondary/30">
    <!-- Header -->
    <header class="bg-card border-b border-border">
        <div class="container-constrained py-4">
            <div class="flex items-center justify-between">
                <h1 class="text-2xl font-bold">Dashboard</h1>
                <div class="flex items-center gap-4">
                    {% if app.user %}
                        <p class="text-sm text-muted-foreground hidden sm:block">
                            Welcome, <span class="font-medium text-foreground">{{ app.user.name ?? app.user.email }}</span>
                        </p>
                        <a 
                            href="{{ path('app_logout') }}" 
                            class="btn btn-outline"
                        >
                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                            </svg>
                            Logout
                        </a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 py-12">
        <div class="container-constrained">
            {% if not app.user %}
                <div class="text-center py-12">
                    <h2 class="text-2xl font-bold mb-4">Please log in to access the dashboard</h2>
                    <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
                </div>
            {% else %}
                <!-- Welcome Section -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold mb-2">Welcome back, {{ app.user.name ?? app.user.email }}! ðŸ‘‹</h2>
                    <p class="text-muted-foreground">
                        Here's an overview of your tickets and their current status
                    </p>
                </div>

                <!-- Stats Grid -->
                <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
                    <!-- Total Tickets -->
                    <div class="bg-card rounded-xl p-6 shadow-md border border-border hover:shadow-lg transition-shadow duration-300">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-muted-foreground mb-1">Total Tickets</p>
                                <p class="text-3xl font-bold">{{ stats.total ?? 0 }}</p>
                            </div>
                            <div class="p-3 rounded-lg bg-primary/10 text-primary">
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
                                </svg>
                            </div>
                        </div>
                    </div>

                    <!-- Open Tickets -->
                    <div class="bg-card rounded-xl p-6 shadow-md border border-border hover:shadow-lg transition-shadow duration-300">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-muted-foreground mb-1">Open Tickets</p>
                                <p class="text-3xl font-bold">{{ stats.open ?? 0 }}</p>
                            </div>
                            <div class="p-3 rounded-lg bg-status-open/10 text-status-open">
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                        </div>
                    </div>

                    <!-- In Progress -->
                    <div class="bg-card rounded-xl p-6 shadow-md border border-border hover:shadow-lg transition-shadow duration-300">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-muted-foreground mb-1">In Progress</p>
                                <p class="text-3xl font-bold">{{ stats.in_progress ?? 0 }}</p>
                            </div>
                            <div class="p-3 rounded-lg bg-status-in-progress/10 text-status-in-progress">
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                        </div>
                    </div>

                    <!-- Resolved -->
                    <div class="bg-card rounded-xl p-6 shadow-md border border-border hover:shadow-lg transition-shadow duration-300">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-muted-foreground mb-1">Resolved</p>
                                <p class="text-3xl font-bold">{{ stats.closed ?? 0 }}</p>
                            </div>
                            <div class="p-3 rounded-lg bg-status-closed/10 text-status-closed">
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-card rounded-xl p-8 shadow-md border border-border">
                    <h3 class="text-xl font-semibold mb-4">Quick Actions</h3>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a 
                            href="{{ path('app_tickets') }}"
                            class="btn btn-primary"
                        >
                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
                            </svg>
                            Manage Tickets
                        </a>
                        <a 
                            href="{{ path('app_tickets', {create: 'true'}) }}"
                            class="btn btn-outline"
                        >
                            Create New Ticket
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </main>

    <!-- Footer -->
    {% include 'components/footer.html.twig' %}
</div>
{% endblock %}