{% extends 'base.html.twig' %}

{% block title %}TickBase - Streamline Your Workflow{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-primary/10 via-background to-accent/5">
        <!-- Wave Background -->
        <div class="absolute inset-0 opacity-20 z-0 bg-cover bg-center bg-no-repeat" style="background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 1200 120\" preserveAspectRatio=\"none\"><path d=\"M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z\" fill=\"%23607ee6\"></path></svg>');"></div>
        
        <!-- Decorative circles - exactly like Vue app -->
        <div class="absolute top-20 right-10 w-48 h-48 sm:w-64 sm:h-64 bg-primary/30 rounded-full z-10 animate-float-slow"></div>
        <div class="hidden md:block absolute bottom-20 left-10 w-72 h-72 sm:w-48 sm:h-48 bg-accent/40 rounded-full z-10 animate-float"></div>

        <!-- Content -->
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-20 py-20 md:py-32">
            <div class="max-w-3xl mx-auto text-center">
                <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
                    TickBase
                </h1>
                <p class="text-lg sm:text-xl md:text-2xl text-muted-foreground mb-6 sm:mb-8">
                    Streamline your workflow with powerful, intuitive ticket management
                </p>
                <p class="text-sm sm:text-base md:text-lg text-muted-foreground mb-8 sm:mb-12 max-w-2xl mx-auto">
                    Organize, track, and resolve issues faster. Perfect for teams of all sizes looking to boost productivity and collaboration.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a 
                        href="/auth/signup" 
                        class="btn btn-primary text-base sm:text-lg px-6 sm:px-8 py-3"
                    >
                        Get Started
                    </a>
                    <a 
                        href="/auth/login" 
                        class="btn btn-outline text-base sm:text-lg px-6 sm:px-8 py-3"
                    >
                        Login
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-16 sm:py-20 bg-secondary/30">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-10 sm:mb-12">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4">Why Choose TickBase?</h2>
                <p class="text-base sm:text-lg text-muted-foreground max-w-2xl mx-auto">
                    Everything you need to manage tickets efficiently and effectively
                </p>
            </div>

            <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- Feature 1: Lightning Fast -->
                <div class="bg-card rounded-xl p-5 sm:p-6 shadow-md hover:shadow-xl transition-all duration-300 border border-border text-center sm:text-left">
                    <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-3 sm:mb-4 mx-auto sm:mx-0">
                        <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <h3 class="text-lg sm:text-xl font-semibold mb-2">Lightning Fast</h3>
                    <p class="text-sm sm:text-base text-muted-foreground">Create and manage tickets in seconds with our intuitive interface</p>
                </div>

                <!-- Feature 2: Secure & Reliable -->
                <div class="bg-card rounded-xl p-5 sm:p-6 shadow-md hover:shadow-xl transition-all duration-300 border border-border text-center sm:text-left">
                    <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-3 sm:mb-4 mx-auto sm:mx-0">
                        <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                    </div>
                    <h3 class="text-lg sm:text-xl font-semibold mb-2">Secure & Reliable</h3>
                    <p class="text-sm sm:text-base text-muted-foreground">Your data is protected with industry-standard security measures</p>
                </div>

                <!-- Feature 3: Team Collaboration -->
                <div class="bg-card rounded-xl p-5 sm:p-6 shadow-md hover:shadow-xl transition-all duration-300 border border-border text-center sm:text-left">
                    <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-3 sm:mb-4 mx-auto sm:mx-0">
                        <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-lg sm:text-xl font-semibold mb-2">Team Collaboration</h3>
                    <p class="text-sm sm:text-base text-muted-foreground">Work together seamlessly with real-time updates and notifications</p>
                </div>

                <!-- Feature 4: Track Progress -->
                <div class="bg-card rounded-xl p-5 sm:p-6 shadow-md hover:shadow-xl transition-all duration-300 border border-border text-center sm:text-left">
                    <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-3 sm:mb-4 mx-auto sm:mx-0">
                        <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-lg sm:text-xl font-semibold mb-2">Track Progress</h3>
                    <p class="text-sm sm:text-base text-muted-foreground">Monitor ticket status from creation to resolution with ease</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 sm:py-20 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-48 sm:w-64 h-48 sm:h-64 bg-primary/5 rounded-full blur-3xl"></div>
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="bg-gradient-to-r from-primary to-accent rounded-2xl p-8 sm:p-12 text-center text-white shadow-2xl">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4">
                    Ready to Transform Your Workflow?
                </h2>
                <p class="text-base sm:text-lg mb-6 sm:mb-8 opacity-90 max-w-2xl mx-auto">
                    Join thousands of teams already using TickBase to manage their tickets efficiently
                </p>
                <a 
                    href="/auth/signup" 
                    class="btn btn-secondary text-base sm:text-lg px-6 sm:px-8 py-3"
                >
                    Start Free Today
                </a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    {% include 'components/footer.html.twig' %}
</div>
{% endblock %}