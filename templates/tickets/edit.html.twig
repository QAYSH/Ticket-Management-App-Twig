{% extends 'base.html.twig' %}

{% block title %}Edit Ticket - TickBase{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col bg-secondary/30">
    <!-- Header -->
    <header class="bg-card border-b border-border">
        <div class="container-constrained py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <a href="{{ path('app_tickets') }}" class="btn btn-outline text-sm">
                        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Back
                    </a>
                    <h1 class="text-xl sm:text-2xl font-bold">Edit Ticket</h1>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 py-12">
        <div class="container-constrained">
            <div class="max-w-2xl mx-auto bg-card rounded-xl shadow-lg p-6 border border-border">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="space-y-2">
                        {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-input' ~ (form.title.vars.errors|length ? ' border-destructive' : '')}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="space-y-2">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-input', 'rows': 4}}) }}
                        <p class="text-xs text-muted-foreground">
                            <span id="charCount">{{ form.description.vars.value|length }}</span>/1000 characters
                        </p>
                    </div>

                    <div class="space-y-2">
                        {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.status, {'attr': {'class': 'form-input' ~ (form.status.vars.errors|length ? ' border-destructive' : '')}}) }}
                        {{ form_errors(form.status) }}
                    </div>

                    <div class="flex flex-col sm:flex-row gap-3 justify-end pt-4">
                        <a href="{{ path('app_tickets') }}" class="btn btn-outline w-full sm:w-auto">Cancel</a>
                        <button type="submit" class="btn btn-primary w-full sm:w-auto">Update Ticket</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>

    <!-- Footer -->
    {% include 'components/footer.html.twig' %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const descriptionInput = document.querySelector('#ticket_form_description');
    const charCount = document.querySelector('#charCount');
    
    if (descriptionInput && charCount) {
        descriptionInput.addEventListener('input', function() {
            charCount.textContent = this.value.length;
        });
    }
});

// Show flash messages as toasts
{% for message in app.flashes('success') %}
    showToast('{{ message }}', '', 'success');
{% endfor %}

{% for message in app.flashes('error') %}
    showToast('{{ message }}', '', 'error');
{% endfor %}
</script>
{% endblock %}