{% extends 'base.html.twig' %}

{% block title %}Ticket Management - TickBase{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col bg-secondary/30">
    <!-- Header -->
    <header class="bg-card border-b border-border sticky top-0 z-30">
        <div class="container-constrained py-4 px-4 sm:px-6">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <!-- Left Section -->
                <div class="flex items-center gap-3 flex-shrink-0">
                    <a href="{{ path('app_dashboard') }}" class="btn btn-outline text-sm">
                        <svg class="h-4 w-4 mr-1 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        <span class="hidden sm:inline">Back</span>
                    </a>
                    <h1 class="text-xl sm:text-2xl font-bold truncate">Ticket Management</h1>
                </div>

                <!-- Right Section (Desktop) -->
                <div class="hidden sm:flex items-center gap-2">
                    <button onclick="openCreateForm()" class="btn btn-primary">
                        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        New Ticket
                    </button>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline">
                        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                        </svg>
                        Logout
                    </a>
                </div>

                <!-- Mobile Menu Button -->
                <div class="sm:hidden">
                    <button onclick="toggleMobileMenu()" class="btn btn-outline p-2" aria-label="Toggle menu">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div id="mobileMenu" class="mt-4 flex flex-col gap-3 sm:hidden hidden">
                <button onclick="openCreateForm()" class="btn btn-primary">
                    <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    New Ticket
                </button>
                <a href="{{ path('app_logout') }}" class="btn btn-outline">
                    <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                    </svg>
                    Logout
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 py-8 sm:py-12">
        <div class="container-constrained">
            <!-- Tabs - Exactly like Vue app -->
            <div class="mb-8">
                <div class="grid grid-cols-2 sm:grid-cols-4 max-w-2xl mx-auto gap-1 bg-muted rounded-lg p-1">
                    <a href="{{ path('app_tickets') }}" 
                       class="px-4 py-2 rounded-md text-sm font-medium transition-colors text-center {{ current_status == 'all' ? 'bg-background text-foreground shadow-sm' : 'text-muted-foreground hover:text-foreground' }}">
                        All ({{ counts.all }})
                    </a>
                    <a href="{{ path('app_tickets', {status: 'open'}) }}" 
                       class="px-4 py-2 rounded-md text-sm font-medium transition-colors text-center {{ current_status == 'open' ? 'bg-background text-foreground shadow-sm' : 'text-muted-foreground hover:text-foreground' }}">
                        Open ({{ counts.open }})
                    </a>
                    <a href="{{ path('app_tickets', {status: 'in_progress'}) }}" 
                       class="px-4 py-2 rounded-md text-sm font-medium transition-colors text-center {{ current_status == 'in_progress' ? 'bg-background text-foreground shadow-sm' : 'text-muted-foreground hover:text-foreground' }}">
                        In Progress ({{ counts.in_progress }})
                    </a>
                    <a href="{{ path('app_tickets', {status: 'closed'}) }}" 
                       class="px-4 py-2 rounded-md text-sm font-medium transition-colors text-center {{ current_status == 'closed' ? 'bg-background text-foreground shadow-sm' : 'text-muted-foreground hover:text-foreground' }}">
                        Closed ({{ counts.closed }})
                    </a>
                </div>
            </div>

            <!-- Content -->
            {% if tickets is empty %}
                <div class="text-center py-12 bg-card rounded-xl border border-border">
                    <p class="text-muted-foreground mb-4">
                        {{ getEmptyStateMessage(current_status) }}
                    </p>
                    {% if current_status == 'all' %}
                        <button onclick="openCreateForm()" class="btn btn-primary">
                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            Create Ticket
                        </button>
                    {% endif %}
                </div>
            {% else %}
                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for ticket in tickets %}
                        <div class="bg-card rounded-xl p-6 shadow-md border border-border hover:shadow-lg transition-shadow duration-300 group">
                            <div class="flex items-start justify-between gap-2 mb-4">
                                <h3 class="text-lg font-semibold line-clamp-2">{{ ticket.title }}</h3>
                                <span class="px-3 py-1 rounded-full text-sm font-medium text-white {{ ticket.statusColor }}">
                                    {{ ticket.statusLabel }}
                                </span>
                            </div>
                            
                            <p class="text-muted-foreground line-clamp-3 mb-4">
                                {{ ticket.description ?: 'No description provided' }}
                            </p>
                            
                            <div class="flex items-center justify-between text-sm text-muted-foreground">
                                <div>
                                    <p>Created: {{ ticket.createdAt|date('M j, Y') }}</p>
                                    {% if ticket.updatedAt != ticket.createdAt %}
                                        <p>Updated: {{ ticket.updatedAt|date('M j, Y') }}</p>
                                    {% endif %}
                                </div>
                                <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <a 
                                        href="{{ path('app_tickets_edit', {id: ticket.id}) }}"
                                        class="p-2 border border-input rounded-md hover:bg-accent"
                                    >
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                        </svg>
                                    </a>
                                    <form method="post" action="{{ path('app_tickets_delete', {id: ticket.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this ticket?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
                                        <button type="submit" class="p-2 border border-input rounded-md hover:bg-destructive hover:text-destructive-foreground">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </main>

    <!-- Create Ticket Modal -->
    {% if show_form %}
        <div id="createModal" class="fixed inset-0 bg-black/50 flex items-center justify-center p-4 z-50">
            <div class="bg-background rounded-2xl shadow-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto">
                <div class="p-6 border-b border-border">
                    <h2 class="text-xl font-semibold">Create New Ticket</h2>
                </div>
                <div class="p-6">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        <div class="space-y-2">
                            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-input' ~ (form.title.vars.errors|length ? ' border-destructive' : '')}}) }}
                            {{ form_errors(form.title) }}
                        </div>

                        <div class="space-y-2">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-input', 'rows': 4}}) }}
                            <p class="text-xs text-muted-foreground">
                                <span id="charCount">0</span>/1000 characters
                            </p>
                        </div>

                        <div class="space-y-2">
                            {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.status, {'attr': {'class': 'form-input' ~ (form.status.vars.errors|length ? ' border-destructive' : '')}}) }}
                            {{ form_errors(form.status) }}
                        </div>

                        <div class="flex flex-col sm:flex-row gap-3 justify-end pt-4">
                            <button type="button" onclick="closeCreateForm()" class="btn btn-outline w-full sm:w-auto">Cancel</button>
                            <button type="submit" class="btn btn-primary w-full sm:w-auto">Create Ticket</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Footer -->
    {% include 'components/footer.html.twig' %}
</div>

<script>
function toggleMobileMenu() {
    const menu = document.getElementById('mobileMenu');
    menu.classList.toggle('hidden');
}

function openCreateForm() {
    window.location.href = "{{ path('app_tickets', {create: 'true'}) }}";
}

function closeCreateForm() {
    window.location.href = "{{ path('app_tickets') }}";
}

function getEmptyStateMessage(status) {
    switch(status) {
        case 'all': return 'No tickets yet. Create your first ticket to get started!';
        case 'open': return 'No open tickets.';
        case 'in_progress': return 'No in progress tickets.';
        case 'closed': return 'No closed tickets.';
        default: return 'No tickets found.';
    }
}

// Character count for description
document.addEventListener('DOMContentLoaded', function() {
    const descriptionInput = document.querySelector('#ticket_form_description');
    const charCount = document.querySelector('#charCount');
    
    if (descriptionInput && charCount) {
        charCount.textContent = descriptionInput.value.length;
        
        descriptionInput.addEventListener('input', function() {
            charCount.textContent = this.value.length;
        });
    }

    // Close mobile menu when clicking outside
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.container-constrained')) {
            const menu = document.getElementById('mobileMenu');
            if (menu && !menu.classList.contains('hidden')) {
                menu.classList.add('hidden');
            }
        }
    });
});

// Show flash messages as toasts
{% for message in app.flashes('success') %}
    showToast('{{ message }}', '', 'success');
{% endfor %}

{% for message in app.flashes('error') %}
    showToast('{{ message }}', '', 'error');
{% endfor %}
</script>
{% endblock %}